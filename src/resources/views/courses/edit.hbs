<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    {{!-- use method-override:  https://expressjs.com/en/resources/middleware/method-override.html --}}
    <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT"> {{!-- override put lên method post của form--}}
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="inp-name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea id="inp-description" class="form-control" name="description">{{course.description}}</textarea>
            
        </div>
        <div class="form-group">
            <label for="videoId">Video</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="inp-videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input type="text" class="form-control" value="{{course.level}}" id="inp-level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>

</div>